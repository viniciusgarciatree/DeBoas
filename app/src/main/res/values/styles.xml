<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="texto_boas_vindas">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="texto">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="imgens">
        <item name="android:gravity">center</item>
    </style>

    <style name="botao">
        <item name="android:gravity">center</item>
    </style>

    <style name="texto_objeto">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12pt</item>
        <item name="android:paddingTop">50dp</item>
    </style>

    <style name="texto_objeto_sub">
        <item name="android:gravity">center</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="lista_objetos">
        <item name="android:padding">10dp</item>
    </style>

    <style name="edit_nome_objeto">
        <item name="android:textSize">12pt</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>